<h2><%= @question.title %></h2>
<p> asked by: <%= link_to "#{@question.user.username}", user_path(@question.user) %> </p>

<p>
  <%= @question.description %>
</p>

<% if current_user.id == @question.user.id  %>
  <%= link_to 'Delete', question_path(@question),
       method: :delete,
       data: { confirm: 'Are you sure?' } %>
  <%= link_to 'Edit', edit_question_path(@question) %><br>
<% end %>

<h3>Answers:</h3>
<ul>
  <% @question.answers.each do |answer| %>
    <li><%= answer.description %>  by:
      <%= link_to "#{answer.user.username}", user_path(answer.user) %>
  <% end %>
</ul>

<% if user_signed_in? %>
  <%= link_to 'Reply', new_question_answer_path(@question, @answer) %>
<% end %>